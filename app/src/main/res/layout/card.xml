<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="130.0dip"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_marginBottom="5.0dip"

    android:layout_marginTop="8.0dip"
    android:background="@android:color/transparent"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        card_view:cardCornerRadius="2.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/mainlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                fresco:actualImageScaleType="centerCrop"

                fresco:placeholderImageScaleType="centerCrop"
                fresco:viewAspectRatio="1.77"

                />

            <com.goohungrry.ecode.ui.GooTextView
                android:id="@+id/dishname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_toRightOf="@+id/item_image"
                android:ellipsize="end"
            android:paddingBottom="4.0dp"
                android:gravity="left"
                android:lines="1"
                android:maxLines="2"
                android:paddingLeft="13.0dip"
                android:paddingTop="8.0dip"
                android:text="Restaurant Name"
                android:textColor="#fc151414"
                android:textSize="17.0sp" />

            <LinearLayout
                android:id="@+id/qauntitylayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dishname"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip"
                android:layout_toRightOf="@+id/item_image"
                android:orientation="vertical">

                <com.goohungrry.ecode.ui.GooTextView
                    android:id="@+id/qText"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1.0dip"
                    android:gravity="center"
                    android:text="Chinese , North"
                    android:textSize="15.0sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="right"
                    android:paddingTop="10dip"
                    android:orientation="horizontal">

                    <com.goohungrry.ecode.ui.GooTextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="₹₹₹₹"
                        android:textSize="17.0sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="35.0dip"

                android:layout_alignRight="@+id/dishname"
                android:layout_alignTop="@+id/qauntitylayout"
                android:layout_toRightOf="@+id/qauntitylayout"
                android:orientation="vertical">



                <com.goohungrry.ecode.ui.GooTextView
                    android:id="@+id/totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="45 min"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/availability"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_image"
                android:layout_alignParentBottom="true"
               android:gravity="center"
                android:layout_below="@+id/item_image"
                android:layout_margin="4.0dip"
                android:animateLayoutChanges="true"
                android:background="#88000000"
                android:orientation="horizontal"
                android:visibility="visible"

                >


                <com.goohungrry.ecode.ui.GooTextView
                    android:id="@+id/availabilitystatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"




                    android:text="4.5"
                    android:textColor="#ffffff"
                    android:textSize="15.0sp"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/trans_overlay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#af000000"
            android:clickable="true"
            android:clipChildren="false"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/remove"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip" />

            <View
                android:id="@+id/view"
                android:layout_width="1.0dip"
                android:layout_height="56.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_toRightOf="@+id/remove"
                android:background="#ff737374" />

            <ImageView
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_toRightOf="@+id/view"
               />

            <com.goohungrry.ecode.ui.GooTextView
                android:id="@+id/overlay_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/minus"
                android:gravity="center"
                android:text="Closed"
                android:textColor="#ffffffff"
                android:textSize="30.0sp" />



            <com.goohungrry.ecode.ui.GooTextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10.0dip"
                android:layout_marginRight="10.0dip"
                android:gravity="bottom"
                android:text="OK"
                android:textColor="#ffffffff"
                android:textSize="15.0sp"
                android:visibility="visible" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>