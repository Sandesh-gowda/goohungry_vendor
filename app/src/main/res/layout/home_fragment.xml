<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/search_layout"
            app:layout_scrollFlags="enterAlways|exitUntilCollapsed|scroll|snap">

            <RelativeLayout
                android:id="@+id/custom_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimary"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/custom_toolbar_title_container"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16.0dip"
                    android:layout_toLeftOf="@+id/restaurant_favourite_listing_layout"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_rectangle"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/custom_toolbar_title_image"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/mb"
                        android:scaleType="fitXY"
                        android:src="@drawable/location" />

                    <RelativeLayout
                        android:id="@+id/custom_toolbar_title_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/custom_toolbar_title_image"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/custom_toolbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/gap"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Hsr Layout "
                            android:textColor="@color/black"
                            android:textSize="18.0sp" />

                        <TextView
                            android:id="@+id/custom_toolbar_subtitle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/custom_toolbar_title"
                            android:layout_below="@+id/custom_toolbar_title"
                            android:layout_marginBottom="4.0dip"
                            android:layout_marginRight="@dimen/gap"
                            android:layout_marginTop="2.0dip"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="hsr 5th sector"
                            android:textColor="@color/black"
                            android:textSize="12.0sp"
                            android:visibility="visible" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/restaurant_favourite_listing_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:gravity="center_horizontal"
                    android:paddingRight="@dimen/margin_small">

                    <ImageView
                        android:id="@+id/restaurant_favourite_listing"
                        android:layout_width="48.0dip"
                        android:layout_height="fill_parent"
                        android:padding="@dimen/margin_normal"
                        android:src="@drawable/favorites_listing"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/card_search_view"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/search_layout"
                android:layout_below="@+id/custom_toolbar"
                android:layout_margin="0.0dip"
                android:background="@color/colorPrimary"
                android:padding="0.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:background="@color/colorPrimary"
                    android:descendantFocusability="beforeDescendants"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/activity_restaurant_search_text"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/search_rounded_background"

                        android:drawablePadding="11.0dip"

                        android:ellipsize="end"
                        android:focusable="false"
                        android:hint="search dish"
                        android:maxLines="1"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/restaurant_activity_left_margin"
                        android:theme="@style/SearchEditTextTheme" />

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:id="@+id/activity_restaurant_filter_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:foreground="@drawable/ripple_rectangle"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/mb"
                        android:paddingRight="@dimen/mb">

                        <TextView
                            android:id="@+id/activity_restaurant_filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="1"

                            android:textSize="15.0sp" />

                        <ImageView
                            android:id="@+id/activity_restaurant_filter_applied"
                            android:layout_width="6.0dip"
                            android:layout_height="6.0dip"
                            android:layout_alignTop="@+id/activity_restaurant_filter"
                            android:layout_marginTop="-2.0dip"
                            android:layout_toRightOf="@+id/activity_restaurant_filter"
                            android:src="@drawable/v2_green_circle_drawable" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <com.malinskiy.superrecyclerview.SuperRecyclerView
            android:id="@+id/hotelsRecycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_4"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_empty="@layout/emptyview"
            app:layout_moreProgress="@layout/view_more_progress"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:recyclerPadding="0dp"
            app:scrollbarStyle="insideInset" />


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>